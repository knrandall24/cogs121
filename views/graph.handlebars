		const myURL = 'users/'+ currentUser;
		$.ajax({
		 url: myURL,
		 type: 'GET',
		 dataType: 'json',
		 success: (data) => {
			 console.log('task overview points', data.points);
			 $('#pointsDiv').html('You have ' + data.points + ' points!');
	}
})
